{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true,  // Enable this option
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "baseUrl": "./src",
      "types": ["node", "react", "react-dom", "@types/react"] // Ensures TypeScript has the necessary types for SVG and React
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.svg",
      "src/**/*.d.ts"  
    ],
    "exclude": ["node_modules"]
  }
  